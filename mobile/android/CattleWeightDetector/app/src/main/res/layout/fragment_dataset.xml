<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- ========================================== -->
    <!-- CAMERA SECTION (62% - LEFT) -->
    <!-- ========================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cameraSection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#212121"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCapture"
        app:layout_constraintWidth_percent="0.62">

        <!-- Camera Preview dengan Frame (4:3 Aspect Ratio) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cameraFrame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Camera Preview (Built-in) -->
                <androidx.camera.view.PreviewView
                    android:id="@+id/cameraPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:scaleType="fillCenter" />

                <!-- USB Camera Preview (GroundChat) -->
                <TextureView
                    android:id="@+id/uvcCameraView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Camera Status Overlay (top-left) -->
        <TextView
            android:id="@+id/tvCameraStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="#CC000000"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="ðŸ“· Camera Ready"
            android:textColor="#4CAF50"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="@id/cameraFrame"
            app:layout_constraintStart_toStartOf="@id/cameraFrame" />

        <!-- Save Status Overlay (top-right) -->
        <TextView
            android:id="@+id/tvSaveStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="#CC000000"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="ðŸ“ Ready"
            android:textColor="#FFC107"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/cameraFrame"
            app:layout_constraintEnd_toEndOf="@id/cameraFrame" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ========================================== -->
    <!-- CAPTURE BUTTON (8% - CENTER) -->
    <!-- ========================================== -->
    <Button
        android:id="@+id/btnCapture"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="ðŸ“¸\n\nC\nA\nP\nT\nU\nR\nE"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#00BCD4"
        android:elevation="12dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintStart_toEndOf="@id/cameraSection"
        app:layout_constraintEnd_toStartOf="@id/lidarSection"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- ========================================== -->
    <!-- LIDAR & INFO SECTION (30% - RIGHT) -->
    <!-- ========================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lidarSection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#BDBDBD"
        app:layout_constraintStart_toEndOf="@id/btnCapture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.30">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/tvLidarHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#616161"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATASET CAPTURE"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1" />
        </LinearLayout>

        <!-- Control Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/controlBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#757575"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvLidarHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Camera Switch Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“· GroundChat:"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchCameraMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="9sp"
                        app:thumbTint="#4CAF50"
                        app:trackTint="#81C784" />
                </LinearLayout>

                <!-- LiDAR Connection Status -->
                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="ðŸ”´ LiDAR: Disconnected"
                    android:textColor="#F44336"
                    android:textSize="9sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/controlBar"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Dataset Count Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#424242"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š Total Dataset"
                            android:textColor="#B0BEC5"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/tvDatasetCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#4CAF50"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Distance Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#757575"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“ Distance"
                                android:textColor="#E0E0E0"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cm"
                            android:textColor="#BDBDBD"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Signal Strength Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#757575"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“¶ Signal"
                                android:textColor="#E0E0E0"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvSignalStrength"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="units"
                            android:textColor="#BDBDBD"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Temperature Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#757575"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ¡ï¸ Temperature"
                                android:textColor="#E0E0E0"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Â°C"
                            android:textColor="#BDBDBD"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last update: --"
                    android:textAlignment="center"
                    android:textColor="#616161"
                    android:textSize="9sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
