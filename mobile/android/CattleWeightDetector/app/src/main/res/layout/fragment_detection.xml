<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- ========================================== -->
    <!-- CAMERA SECTION (62% - LEFT) -->
    <!-- ========================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cameraSection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#212121"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDetect"
        app:layout_constraintWidth_percent="0.62">

        <!-- Camera Preview dengan Frame (4:3 Aspect Ratio) - HANYA CAMERA & DETECTION OVERLAY -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cameraFrame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintDimensionRatio="4:3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Camera Preview -->
                <androidx.camera.view.PreviewView
                    android:id="@+id/cameraPreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Detection Overlay (HANYA INI - kotak hijau YOLO) -->
                <com.capstone.cattleweight.DetectionOverlayView
                    android:id="@+id/detectionOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ========================================== -->
    <!-- DETECT BUTTON (8% - CENTER) -->
    <!-- Tinggi sama dengan parent untuk area tap besar -->
    <!-- ========================================== -->
    <Button
        android:id="@+id/btnDetect"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="ðŸ”\n\nD\nE\nT\nE\nC\nT"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:elevation="12dp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintStart_toEndOf="@id/cameraSection"
        app:layout_constraintEnd_toStartOf="@id/lidarSection"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- ========================================== -->
    <!-- LIDAR SECTION (30% - RIGHT) -->
    <!-- ========================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lidarSection"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#BDBDBD"
        app:layout_constraintStart_toEndOf="@id/btnDetect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.30">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/tvLidarHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#616161"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LIDAR DATA"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1" />
        </LinearLayout>

        <!-- Control Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/controlBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#757575"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvLidarHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- Connection Status (USB Only) -->
                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”´ USB Disconnected"
                    android:textColor="#F44336"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- LiDAR Data Container -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/controlBar"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ML RESULT OVERLAY -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#424242"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/mlResultOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tvEstimatedWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bobot Karkas: -- kg"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:drawableStart="@android:drawable/ic_menu_info_details"
                            android:drawablePadding="6dp" />

                        <TextView
                            android:id="@+id/tvConfidence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Confidence: --%"
                            android:textColor="#B0BEC5"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- LIDAR DATA SECTION -->
                
                <!-- Jarak (Distance) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#757575"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“ Distance"
                                android:textColor="#E0E0E0"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cm"
                            android:textColor="#EEEEEE"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Signal Strength & Temperature (Horizontal Layout) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Kekuatan Sinyal (Signal Strength) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:cardBackgroundColor="#616161"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“¶ Signal"
                                android:textColor="#E0E0E0"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvSignalStrength"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Suhu (Temperature) -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:cardBackgroundColor="#757575"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ¡ï¸ Chip Temp"
                                android:textColor="#E0E0E0"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvTemperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--Â°C"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last update: --"
                    android:textAlignment="center"
                    android:textColor="#9E9E9E"
                    android:textSize="10sp" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
