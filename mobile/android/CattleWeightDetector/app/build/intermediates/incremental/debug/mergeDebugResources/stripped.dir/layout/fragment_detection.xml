<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- ========================================== -->
    <!-- CAMERA SECTION (45% - TOP) -->
    <!-- ========================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cameraSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#212121"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lidarSection"
        app:layout_constraintHeight_percent="0.45">

        <!-- Camera Preview -->
        <androidx.camera.view.PreviewView
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Detection Overlay untuk YOLO bounding boxes -->
        <com.capstone.cattleweight.DetectionOverlay
            android:id="@+id/detectionOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Overlay untuk Hasil Deteksi ML Model -->
        <LinearLayout
            android:id="@+id/mlResultOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#DD000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvEstimatedWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bobot: -- kg"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="6dp" />

            <TextView
                android:id="@+id/tvConfidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Confidence: --%"
                android:textColor="#B0BEC5"
                android:textSize="10sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Button Prediksi Berat -->
        <Button
            android:id="@+id/btnPredictWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¯ PREDIKSI BERAT"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_margin="12dp"
            android:backgroundTint="#FF5722"
            android:enabled="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Status Camera -->
        <TextView
            android:id="@+id/tvCameraStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="#DD000000"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="ðŸ“· Camera Ready"
            android:textColor="#4CAF50"
            android:textSize="9sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ========================================== -->
    <!-- LIDAR SECTION (55% - BOTTOM) -->
    <!-- ========================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lidarSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#B71C1C"
        app:layout_constraintTop_toBottomOf="@id/cameraSection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.55">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/tvLidarHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C62828"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REAL-TIME DETECTION"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.1" />
        </LinearLayout>

        <!-- Control Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/controlBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#D32F2F"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvLidarHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- Connection Status -->
                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”´ Disconnected"
                    android:textColor="#F44336"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium" />

                <!-- LiDAR Mode Switch - BIGGER SIZE -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#E53935"
                    android:paddingStart="12dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="USB Mode"
                        android:textColor="#FFCDD2"
                        android:textSize="10sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginEnd="8dp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchLidarMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="56dp"
                        android:minHeight="40dp"
                        android:scaleX="1.3"
                        android:scaleY="1.3"
                        app:thumbTint="#FFFFFF"
                        app:trackTint="#EF9A9A" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- LiDAR Data Container -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/controlBar"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Jarak (Distance) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#E53935"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“ Distance"
                                android:textColor="#FFCDD2"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cm"
                            android:textColor="#EF9A9A"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Kekuatan Sinyal (Signal Strength) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="#7B1FA2"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“¶ Signal Strength"
                                android:textColor="#E1BEE7"
                                android:textSize="9sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvSignalStrength"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="#FFFFFF"
                                android:textSize="20sp"
                                android:fontFamily="sans-serif-light"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="units"
                            android:textColor="#CE93D8"
                            android:textSize="11sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Suhu (Temperature) -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="#C62828"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ¡ï¸ SUHU CHIP"
                            android:textColor="#FFCDD2"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--Â°C"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last update: --"
                    android:textAlignment="center"
                    android:textColor="#EF9A9A"
                    android:textSize="10sp" />

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
